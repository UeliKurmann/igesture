<project name="iGesture" default="gestureTool" basedir=".">

    <property name="base.dir" value="${basedir}/.."/>
    <property name="lib.dir" value="${base.dir}/lib"/>
    <property name="log.dir" value="${base.dir}/log"/>

    <path id="base.class.path">
        <pathelement path="${etc.dir}"/>
        <fileset dir="${lib.dir}" includes="*.jar"/>
    </path>

    <target name="gestureTool">
        <mkdir dir="${log.dir}" />
        <launch classname="org.ximtec.igesture.tool.GestureToolMain">
            <classpath refid="base.class.path"/>
            <syspropertyset>
                <sysproperty key="log.dir" file="${log.dir}"/>
                <sysproperty key="java.library.path" file="${lib.dir}"/>
            </syspropertyset>
        </launch>
    </target>
</project>