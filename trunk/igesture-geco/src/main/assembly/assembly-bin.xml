<assembly>
  <id>bin</id>
  <formats>
  <!--  
    <format>tar.gz</format>
    <format>tar.bz2</format>
  -->
    <format>zip</format>
  </formats>
  
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>lib/</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/lib/launcher</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/lib</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*.dll</include>
      </includes>
    </fileSet>
		<fileSet>
			<directory>src/main/resources</directory> 
			<outputDirectory>/</outputDirectory>
			<includes>
				<exclude>*.properties</exclude> 
			</includes>
		</fileSet>
    <fileSet>
      <directory>src/main/data</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
  </fileSets>
  
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <unpack>false</unpack>
      <excludes>
      	<exclude>org.fife.plaf:officeLnFs</exclude>
      	<exclude>com.db4o:db4o-java5</exclude>
      	<exclude>com.db4o:db4o-nqopt</exclude>
      	<exclude>attjsapi:attjsapi</exclude>
      	<exclude>myscript:engine</exclude>
      	<exclude>myscript:inksearch</exclude>
      	<exclude>myscript:hwr</exclude>
      	<exclude>javax.servlet:servlet-api</exclude>      	
      	<exclude>junit:junit</exclude>
      	<exclude>com.lowagie:itext</exclude>      	
      	<exclude>org.jpedal:jpedalSTD</exclude>     	
      	<exclude>xalan:xalan</exclude> 



      	
      	
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>